<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bgTask2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.TaskFragment">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:text="Titulo"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtTituloNota2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="[Insertar titulo de la nota]"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btnPalette2"
        android:layout_width="28dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:layout_weight="0"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_colors"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/txtTituloNota2"
        app:tint="@color/black"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Casillas"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGuardarNotaCheckList" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <EditText
            android:id="@+id/txtTextoCasilla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="[Insertar texto de la casilla]"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btnGuardarCasAdd"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_weight="0"
            android:background="#00FFFFFF"
            android:src="@drawable/ic_add"
            android:visibility="gone"
            app:tint="@color/black"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/palette2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@color/black"
        android:padding="2sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPalette2">


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.example.gestiondetareas.ui.components.SquareComponent
                    android:id="@+id/color_one"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@color/color_one" />

                <com.example.gestiondetareas.ui.components.SquareComponent
                    android:id="@+id/color_two"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@color/color_two" />

                <com.example.gestiondetareas.ui.components.SquareComponent
                    android:id="@+id/color_three"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@color/color_three" />

                <com.example.gestiondetareas.ui.components.SquareComponent
                    android:id="@+id/color_four"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@color/color_four" />

                <com.example.gestiondetareas.ui.components.SquareComponent
                    android:id="@+id/color_five"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@color/color_five" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.example.gestiondetareas.ui.components.SquareComponent
                    android:id="@+id/color_six"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@color/color_six" />

                <com.example.gestiondetareas.ui.components.SquareComponent
                    android:id="@+id/color_seven"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@color/color_seven" />

                <com.example.gestiondetareas.ui.components.SquareComponent
                    android:id="@+id/color_eight"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@color/color_eight" />

                <com.example.gestiondetareas.ui.components.SquareComponent
                    android:id="@+id/color_nine"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@color/color_nine" />

                <com.example.gestiondetareas.ui.components.SquareComponent
                    android:id="@+id/color_ten"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@color/color_ten" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </TableLayout>

    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lstCasillas"
        android:layout_width="0dp"
        android:layout_height="284dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:listitem="@layout/item_list_casillas" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnGuardarDatos2"
        android:layout_width="62dp"
        android:layout_height="72dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/color_other"
        android:clickable="true"
        android:src="@drawable/ic_done2"
        android:textAlignment="center"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnGuardarNotaCheckList"
        android:layout_width="76dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Ok"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/palette2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Elige un color"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTituloNota2" />

</androidx.constraintlayout.widget.ConstraintLayout>